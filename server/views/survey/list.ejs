<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- User survey Content -->
<main class="containter">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1>Survey List</h1>
            <table class="table table-striped table-borderless table-hover rounded-lg shadow-lg">

                <!-- Header -->
                <tr class="d-flex tbHead">

                    <th class="text-center col-3">Survey Tilte</th>
                    <th class="text-center col-3">Create Date</th>
                    <th class="text-center col-3">Expire Date</th>
                    <th class="text-center col-3">Take Survey</th>

                </tr>

                <!-- Table Content -->
                <% for(let c = 0; c < surveyList.length; c++) {%>

                <tr class="d-flex">

                    <td class="text-center col-3"><%= surveyList[c].Title %></td>
                    <td class="text-center col-3"><%= surveyList[c].CreateDate.getUTCMonth()+1 +"/" + surveyList[c].CreateDate.getUTCDate() +"/" + surveyList[c].CreateDate.getUTCFullYear()%></td>
                    <td class="text-center col-3"><%= surveyList[c].ExpireDate.getUTCMonth()+1 +"/" + surveyList[c].ExpireDate.getUTCDate() +"/" + surveyList[c].ExpireDate.getUTCFullYear()%></td>
                    <td class="text-center col-3"> <a href="/survey-list/add/<%= surveyList[c]._id %>"
                            class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Take survey </a></td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>



<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>