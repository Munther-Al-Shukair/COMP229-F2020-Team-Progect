<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- /my-survey/view -->
<!-- View My survey Content -->
<main class="containter">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= surveyRespond.SurveyTitle %></h1>
            <h2><%= surveyRespond.RespondDate.getUTCMonth()+1 +"/" + surveyRespond.RespondDate.getUTCDate() +"/" + surveyRespond.RespondDate.getUTCFullYear() %></h2>
            <h2><%= surveyRespond.UserName %></h2>
            <table class="table table-striped table-borderless table-hover rounded-lg shadow-lg">

                <!-- Header -->
                <tr class="d-flex tbHead">
                    <th class="text-center col-6">Questions</th>
                    <th class="text-center col-6">Respond</th>
                </tr>

                <!-- Table Content -->
                <% for(const [key, value] of Object.entries(surveyRespond.Respond)) {%>

                <tr class="d-flex">

                    <td class="text-center col-6"><%= key %></td>
                    <td class="text-center col-6"><%= value %></td>
                </tr>
                <% } %>
            </table>

            
        </div>
    </div>
</main>

